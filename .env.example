# Briefly: Todoist-iCal-AI Integration
# Environment Configuration Example

# Todoist API Configuration
TODOIST_API_TOKEN=your_todoist_personal_api_token_here

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# iCal Integration
ICAL_URLS=https://calendar1.com/basic.ics,https://calendar2.com/basic.ics

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4.1-mini

# Message Schedule Configuration (BRT timezone)
MORNING_MESSAGE_TIME=07:00
EVENING_MESSAGE_TIME=20:00

# Security
ENCRYPTION_KEY=32_character_random_string_for_AES256

# App Configuration
ENVIRONMENT=development
